<zk xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul/zul.xsd"
	xmlns:h="xhtml"
	xmlns:d="http://www.zkoss.org/2005/zk/client/attribute">
		
						 
<div class="table">					 
					
				 <grid  width="100%" height="500px"	model="@load(vm.beans)" sclass="table align-middle mb-0" >  
							<columns sizable="true" menupopup="auto">
							       <column style="font-size:14px;" sclass=" text-capitalize " hflex="1" label="@load(vm.lang.getProperty('PAGINA.label', 'Nombre de pantalla'))" align="center" sort="auto"  sortAscending="@load(vm.comparators['PAGINAAsc'])" sortDescending="@load(vm.comparators['PAGINADesc'])"/>
							       <column style="font-size:14px;" sclass=" text-capitalize " hflex="1" label="@load(vm.lang.getProperty('SCREENUID.label', 'ID pantalla'))" align="center" sort="auto"  sortAscending="@load(vm.comparators['SCREENUIDAsc'])" sortDescending="@load(vm.comparators['SCREENUIDDesc'])"/>
							       <column style="font-size:14px;" sclass=" text-capitalize " hflex="1" label="@load(vm.lang.getProperty('TIPOPAGINA.label', 'Tipo de pagina'))" align="center" sort="auto"  sortAscending="@load(vm.comparators['TIPOPAGINAAsc'])" sortDescending="@load(vm.comparators['TIPOPAGINADesc'])"/>
 							      <column style="font-size:14px;" hflex="1" label="Acciones" align="center" />
							</columns >
							<template name="model" var="item">
						       <row style="text-align:right;cursor:pointer;"  onClick="@command('editData',item=item,page='masterhelp.zul')">
							          <label  value="@load(item.pagina) @converter(vm.fieldConverter)"></label>
                                   
							          <label  value="@load(item.screenuid) @converter(vm.fieldConverter)"></label>
                                   
							          <label  value="@load(item.tipopagina) @converter(vm.fieldConverter)"></label>
                                   
							
                  			
                  		<cell align="center">
						  
						<button
						onClick="@command('editData',item=item,page='masterhelp.zul')"
						iconSclass="s-icon s-icon-lapizplus" sclass="btn"    />
						<space></space>
						<button
						onClick="@command('removeData',item=item)"
						iconSclass="s-icon s-icon-trash"
						sclass="btn"   />
						
					    </cell>
					   </row>
                  		</template>
							<foot>
						     <footer span="4" align="right" label="@load(vm.labelTotal)" />
						    </foot>
						</grid>
 </div>						
</zk>						
