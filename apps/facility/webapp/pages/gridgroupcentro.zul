                                   <label  value="@load(item.getFieldByAtribute('empresa').value) @converter(vm.fieldConverter)"></label>
							         <label  value="@load(item.getFieldByAtribute('DIRECCION').value) @converter(vm.fieldConverter)"></label>
                                   
							         <label  value="@load(item.getFieldByAtribute('POBLACION').value) @converter(vm.fieldConverter)"></label>
                                   
							
                  			
