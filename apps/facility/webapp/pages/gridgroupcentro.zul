							       <column hflex="1" label="@load(vm.lang.getProperty('POBLACION.label', 'poblacion'))" align="center" sort="auto"  sortAscending="@load(vm.comparators['POBLACIONAsc'])" sortDescending="@load(vm.comparators['POBLACIONDesc'])" />
