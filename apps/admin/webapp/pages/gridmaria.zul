<zk xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul/zul.xsd"
	xmlns:h="xhtml"
	xmlns:d="http://www.zkoss.org/2005/zk/client/attribute">
	  						 
<div class="table">					 
					
				 <grid  width="100%" height="500px"	model="@load(vm.beans)" sclass="table align-middle mb-0" >  
							<columns sizable="true" menupopup="auto">
							       <column style="font-size:14px;" sclass=" text-capitalize " hflex="1" label="@load(vm.lang.getProperty('ACTIVIDAD.label', 'actividad'))" align="center" sort="auto"  sortAscending="@load(vm.comparators['ACTIVIDADAsc'])" sortDescending="@load(vm.comparators['ACTIVIDADDesc'])"/>
							       <column style="font-size:14px;" sclass=" text-capitalize " hflex="1" label="@load(vm.lang.getProperty('CNAE.label', 'cnae'))" align="center" sort="auto"  sortAscending="@load(vm.comparators['CNAEAsc'])" sortDescending="@load(vm.comparators['CNAEDesc'])"/>
							       <column style="font-size:14px;" sclass=" text-capitalize " hflex="1" label="@load(vm.lang.getProperty('IAE.label', 'iae'))" align="center" sort="auto"  sortAscending="@load(vm.comparators['IAEAsc'])" sortDescending="@load(vm.comparators['IAEDesc'])"/>
 							      <column style="font-size:14px;" hflex="1" label="Acciones" align="center" />
							</columns >
							<template name="model" var="item">
						       <row style="text-align:right;cursor:pointer;"  onClick="@command('editData',item=item,page='mastermaria.zul')">
							          <label  value="@load(item.actividad) @converter(vm.fieldConverter)"></label>
                                   
							          <label  value="@load(item.cnae) @converter(vm.fieldConverter)"></label>
                                   
							          <label  value="@load(item.iae) @converter(vm.fieldConverter)"></label>
                                   
							
                  			
                  		<cell align="center">
						  
						<button
						onClick="@command('editData',item=item,page='mastermaria.zul')"
						iconSclass="s-icon s-icon-lapizplus" sclass="btn"/>
						<space></space>
						<button
						onClick="@command('removeData',item=item)"
						iconSclass="s-icon s-icon-trash"
						sclass="btn" />
						
					    </cell>
					   </row>
                  		</template>
							<foot>
						     <footer span="4" align="right" label="@load(vm.labelTotal)" />
						    </foot>
						</grid>
 </div>						
</zk>						
